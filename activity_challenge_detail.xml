<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/challenge_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingStart="100dp"
            android:text="Challenge Name"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/generation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generation Info"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/goals_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goals"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black" />


        <ListView
            android:id="@+id/goals_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/back_to_previous_generation_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/backarrow"
                android:background="@android:color/transparent"
                android:contentDescription="Previous" />

            <ImageButton
                android:id="@+id/forward_to_next_generation_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/forwardarrow"
                android:background="@android:color/transparent"
                android:contentDescription="Next" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/back_to_main_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="start|top"
        android:layout_margin="12dp"
        android:src="@drawable/backarrow"
        android:background="@android:color/transparent"
        android:contentDescription="Back to main menu" />

</FrameLayout>
